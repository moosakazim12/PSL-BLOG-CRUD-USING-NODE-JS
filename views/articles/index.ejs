<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Blog</title>
  </head>
  <body style="background-color: rgb(138, 21, 21)">
    <div class="container">
      <div class="mt-4 p-5 bg-secondary text-white rounded text-center">
        <h1 class="mb-4">Pakistan Super League Blog</h1>
        <a href="/articles/new" class="btn btn-success center"
          >Add New Article</a
        >
      </div>

      <% articles.forEach(article => { %>
      <div class="card mt-4 text-center border border-info border-2">
        <div class="card-body">
          <h4 class="card-title"><%= article.title %></h4>
          <div class="card-subtitle text-muted mb-2 text-center">
            <%= article.createdAt.toLocaleDateString() %>
          </div>
          <div class="card-text mb-2"><%= article.description %></div>
          <a
            href="articles/<%= article.slug %>"
            class="btn btn-primary text-center"
            >Read More....</a
          >
          <a href="articles/edit/<%= article.id %>" class="btn btn-info"
            >Edit</a
          >
          <form
            action="/articles/<%= article.id %>?_method=DELETE"
            method="POST"
            class="d-inline"
          >
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
        </div>
      </div>
      <% }) %>
    </div>
  </body>
</html>
